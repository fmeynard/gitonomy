{% extends "GitonomyTicketingBundle::layout_tracker.html.twig" %}

{% trans_default_domain 'ticketing_bundle' %}

{% block tracker_content %}
    <div id="content">
        {% set action = (app.request.get('id') == "") ? path('ticket_category_create') : path('ticket_category_update', {'id': app.request.get('id')}) %}
        {% set legend = (app.request.get('id') == "") ? 'edit'|trans : 'new'|trans %}
        <form method="POST" action="{{ action }}" class="form-horizontal" novalidate>
        <legend>{{ legend }} {{ 'label.category'|trans }}</legend>
        {{ form_widget(form) }}
        <div class="control-group">
            <div class="controls">
                <button class="btn btn-success" type="submit"><i class="symbol">plus</i> {{ 'button.create'|trans }}</button>
                <a class="btn" href="{{ path('tracker_index') }}">{{ 'button.cancel'|trans }}</a>
            </div>
        </div>
        </form>
    </div>
{% endblock %}
