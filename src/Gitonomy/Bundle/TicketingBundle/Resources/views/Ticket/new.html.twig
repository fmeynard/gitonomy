{% extends "GitonomyTicketingBundle::layout_tracker.html.twig" %}

{% trans_default_domain 'ticketing_bundle' %}

{% block tracker_content %}
    <div id="content">
        <form method="POST" action="{{ path('ticket_create') }}" class="form-horizontal" novalidate>
            <legend>{{ 'new'|trans }} {{ 'label.ticket'|trans }}</legend>
            {{ form_widget(form) }}
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-success" type="submit"><i class="symbol">plus</i> {{ 'button.create'|trans }}</button>
                    <a class="btn" href="{{ path('tracker_index') }}">{{ 'button.cancel'|trans }}</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
